<?xml version="1.0" encoding="utf-8"?>
<odoo>
<report
		id="action_report"
		model="wr.model"
		string="Print"
		report_type="qweb-pdf"
		name="warehouse-report.report_template"/>
     
     
<template id="report_template">
		<t t-call="report.html_container">
			<t t-foreach="docs" t-as="doc">
				<t t-call="report.external_layout">
					<div class="page">
						<div>
							<div class="row" style="margin-top:+200px;">
								<div class="col-xs-6">
								</div>
							</div>
                     
							<!-- JUDUL REPORT-->
							 
							<h2 class="text-center">INVOICE</h2>
							
							<div class="row" style="margin-top:+100px;">
								<div class="col-xs-6">
								</div>
							</div>
				 
							<!-- INFORMASI HEADER -->
							 
							<table class="table">
								<tr>
									<td><strong>Invoice ID</strong></td>
									<td><span t-field="doc.sequence_id"/></td>
									<td><strong>Owner</strong></td>
									<td><span t-field="doc.owner"/></td>
								</tr>
								<tr>
									<td><strong>Date In</strong></td>
									<td><span t-field="doc.date_in"/></td>
									<td><strong>Date Out</strong></td>
									<td><span t-field="doc.date_out"/></td>
								</tr>
							</table>
							 
							<div class="row" style="margin-top:+80px;">
								<div class="col-xs-6">
								</div>
							</div>
							 
							<table class="table table-bordered" style="table-layout:auto">
								<thead>
									<tr>
										<th class="text-center">Name</th>
										<th class="text-center">Width</th>
										<th class="text-center">Length</th>
										<th class="text-center">Qty</th>
										<th class="text-center">Price</th>
										
									</tr>
							   </thead>
							   <tbody>
									
										<tr>
											<td><span t-field="doc.name"/></td>
											<td><span t-field="doc.width"/></td>
											<td><span t-field="doc.length"/></td>
											<td><span t-field="doc.qty"/></td>
											<td><span t-field="doc.total_price"/></td>
										</tr>
								
								</tbody>
							</table>
         
						</div>
					</div>						
				</t>
			</t>	
		</t>
	</template>
</odoo>