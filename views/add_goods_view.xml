<odoo>    
<record id="view_form_wr_model" model="ir.ui.view">
        <field name="name">Add New Goods</field>
        <field name="model">wr.model</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="submit_new_goods" type="object" string="Submit" class="oe_highlight"  attrs="{'invisible':[('state','=','iw')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,qin,iw,out"/>
                </header>
                <sheet>
                <group name="group_top">
                        <group name="group_left">
                            <div class="oe_title">
                                <label class="oe_edit_only" for="name" string="Goods Name"/>
                                <h1><field name="name" placeholder="Goods Name"/></h1>
                            </div>
                        </group>
                    </group>
                    <group name="group_bottom">
                        <group name="group_left">
                            <field name="date_in"/>
                            <field name="date_out"/>
                            <field name="owner"/>
                        </group>
                        <group name="group_right">
							<field name="length"/>
							<field name="width"/>
                            <field name="qty"/>
                        </group>
                        <group class="oe_subtotal_footer oe_right" colspan="4" name="sale_total">
                            <field name="total_price" widget='monetary' options="{'currency_field': 'currency_id'}" string="Total Price" attrs="{'readonly':'true'}" />
                        </group>	
                    </group>   
                    <notebook>
                        <page name="description" string="Description">
                            <field name="description"></field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_tree_goods_list" model="ir.ui.view">
        <field name="name">Goods list</field>
        <field name="model">wr.model</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="owner"/>
                <field name="length"/>
                <field name="width"/>
                <field name="date_in"/>
                <field name="date_out"/>
                <field name="qty"/>
				<field name="total_price"/>
            </tree>
        </field>
    </record>
</odoo>
